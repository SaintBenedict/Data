<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="FurnitureBase">
    <defName>Drape</defName>
    <label>drape</label>
    <description>A decorative sheet hanging from a vertical wooden frame. Appropriate for royal rooms.</description>
    <designationCategory>Furniture</designationCategory>
    <altitudeLayer>BuildingOnTop</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.40</fillPercent>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToBuild>2000</WorkToBuild>
      <Mass>15</Mass>
      <Flammability>1.0</Flammability>
      <Beauty>7.5</Beauty>
    </statBases>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <costStuffCount>150</costStuffCount>
    <costList>
      <WoodLog>50</WoodLog>
    </costList>
    <canOverlapZones>true</canOverlapZones>
    <pathCost>10</pathCost>
    <rotatable>true</rotatable>
    <size>(2,1)</size>
    <uiIconOffset>(0, 0.15)</uiIconOffset>
    <filthLeaving>Filth_Trash</filthLeaving>
    <researchPrerequisites>
      <li>ComplexFurniture</li>
    </researchPrerequisites>
    <graphicData>
      <drawSize>(4.2,4.2)</drawSize>
      <texPath>Things/Building/Furniture/Drape</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <shadowData>
        <volume>(2,0.5,0.3)</volume>
        <offset>(0,0,-0.2</offset>
      </shadowData>
      <damageData>
        <rectN>(0.1, 0.1, 1.8, 1.5)</rectN>
        <rectS>(0.1, 0.1, 1.8, 1.5)</rectS>
        <rectE>(0.25, 0.5, 0.5, 1.5)</rectE>
        <rectW>(0.25, 0.5, 0.5, 1.5)</rectW>
      </damageData>
    </graphicData>
  </ThingDef>

  <ThingDef ParentName="FurnitureBase">
    <defName>Brazier</defName>
    <label>brazier</label>
    <description>A bowl-shaped furnishing used to hold a fire. Will light the surroundings and create heat.</description>
    <category>Building</category>
    <tickerType>Normal</tickerType>
    <drawerType>RealtimeOnly</drawerType>
    <fillPercent>0.15</fillPercent>
    <statBases>
      <MaxHitPoints>80</MaxHitPoints>
      <WorkToBuild>100</WorkToBuild>
      <Flammability>0</Flammability>
      <Mass>15</Mass>
    </statBases>
    <selectable>true</selectable>
    <designationCategory>Furniture</designationCategory>
    <uiIconOffset>(0, -0.04)</uiIconOffset>
    <minifiedDef>MinifiedThing</minifiedDef>
    <stuffCategories>
      <li>Metallic</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>50</costStuffCount>
    <placeWorkers>
      <li>PlaceWorker_Heater</li>
    </placeWorkers>
    <drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
    <comps>
      <li Class="CompProperties_Refuelable">
        <fuelConsumptionRate>2.0</fuelConsumptionRate>
        <fuelCapacity>30.0</fuelCapacity>
        <fuelConsumptionPerTickInRain>0.0006</fuelConsumptionPerTickInRain>
        <fuelFilter>
          <thingDefs>
            <li>WoodLog</li>
          </thingDefs>
        </fuelFilter>
        <initialFuelPercent>0</initialFuelPercent>
        <showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
      </li>
      <li Class="CompProperties_Glower">
        <glowRadius>10</glowRadius>
        <glowColor>(252,187,113,0)</glowColor>
      </li>
      <li Class="CompProperties_HeatPusher">
        <compClass>CompHeatPusherPowered</compClass>
        <heatPerSecond>3.5</heatPerSecond>
        <heatPushMaxTemperature>23</heatPushMaxTemperature>
      </li>
      <li Class="CompProperties_FireOverlay">
        <fireSize>1</fireSize>
        <offset>(0,0,0.18)</offset>
      </li>
    </comps>
    <canOverlapZones>false</canOverlapZones>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <rotatable>false</rotatable>
    <researchPrerequisites>
      <li>ComplexFurniture</li>
    </researchPrerequisites>
    <graphicData> <!-- art+to -->
      <texPath>Things/Building/Misc/Brazier</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <shadowData>
        <volume>(0.55, 0.35, 0.3)</volume>
        <offset>(0, 0, -0.28)</offset>
      </shadowData>
      <damageData>
        <rect>(0.2,0.3,0.6,0.6)</rect>
      </damageData>
    </graphicData>
  </ThingDef>

  <ThingDef ParentName="FurnitureWithQualityBase">
    <defName>Throne</defName>
    <label>throne</label>
    <drawGUIOverlay>true</drawGUIOverlay>
    <drawGUIOverlayQuality>false</drawGUIOverlayQuality>
    <description>A large, ornate chair, designed for a noble to sit and reign. Thrones define the room in which they are placed as a throneroom, and sitting on the satisfies nobles' need for authority.</description>
    <defaultPlacingRot>South</defaultPlacingRot>
    <altitudeLayer>Building</altitudeLayer>
    <category>Building</category>
    <thingSetMakerTags><li>RewardStandardQualitySuper</li></thingSetMakerTags>
    <hasInteractionCell>true</hasInteractionCell>
    <statBases>
      <MaxHitPoints>75</MaxHitPoints>
      <WorkToBuild>10000</WorkToBuild>
      <Mass>40</Mass>
      <Flammability>1.0</Flammability>
      <Beauty>4</Beauty>
      <Comfort>0.75</Comfort>
    </statBases>
    <thingClass>Building_Throne</thingClass>
    <socialPropernessMatters>true</socialPropernessMatters>
    <constructionSkillPrerequisite>4</constructionSkillPrerequisite>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>125</costStuffCount>
    <pathCost>30</pathCost>
    <fillPercent>0.4</fillPercent>
    <building>
      <isSittable>true</isSittable>
    </building>
    <uiIconOffset>(0, 0.08)</uiIconOffset>
    <uiIconScale>0.75</uiIconScale>
    <comps>
      <li Class="CompProperties_AssignableToPawn">
        <drawAssignmentOverlay>true</drawAssignmentOverlay>
        <compClass>CompAssignableToPawn_Throne</compClass>
      </li>
    </comps>
    <researchPrerequisites>
      <li>ComplexFurniture</li>
    </researchPrerequisites>
    <graphicData>
      <drawSize>(2.4,2.4)</drawSize>
      <texPath>Things/Building/Furniture/Throne</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shadowData>
        <volume>(0.5,0.35,0.4)</volume>
      </shadowData>
      <damageData>
        <rect>(0.2,0,2, 0.6, 0.6)</rect>
      </damageData>
    </graphicData>
  </ThingDef>

  <ThingDef ParentName="FurnitureWithQualityBase">
    <defName>GrandThrone</defName>
    <label>grand throne</label>
    <drawGUIOverlay>true</drawGUIOverlay>
    <drawGUIOverlayQuality>false</drawGUIOverlayQuality>
    <description>A massive, ornate chair, designed for a noble to sit and reign. Thrones define the room in which they are placed as a throneroom, and sitting on the satisfies nobles' need for authority.</description>
    <defaultPlacingRot>South</defaultPlacingRot>
    <castEdgeShadows>True</castEdgeShadows>
    <altitudeLayer>Building</altitudeLayer>
    <category>Building</category>
    <size>(3,2)</size>
    <thingSetMakerTags><li>RewardStandardQualitySuper</li></thingSetMakerTags>
    <interactionCellOffset>(0,0,1)</interactionCellOffset>
    <hasInteractionCell>true</hasInteractionCell>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <WorkToBuild>40000</WorkToBuild>
      <Mass>100</Mass>
      <Flammability>1.0</Flammability>
      <Beauty>6</Beauty>
      <Comfort>0.9</Comfort>
    </statBases>
    <thingClass>Building_Throne</thingClass>
    <socialPropernessMatters>true</socialPropernessMatters>
    <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
    <stuffCategories>
      <li>Metallic</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>300</costStuffCount>
    <costList>
      <Gold>75</Gold>
    </costList>
    <pathCost>30</pathCost>
    <fillPercent>0.4</fillPercent>
    <building>
      <isSittable>true</isSittable>
    </building>
    <uiIconOffset>(0, 0.04)</uiIconOffset>
    <uiIconScale>1</uiIconScale>
    <comps>
      <li Class="CompProperties_AssignableToPawn">
        <drawAssignmentOverlay>true</drawAssignmentOverlay>
        <compClass>CompAssignableToPawn_Throne</compClass>
      </li>
    </comps>
    <researchPrerequisites>
      <li>ComplexFurniture</li>
    </researchPrerequisites>
    <graphicData>
      <drawSize>(4,4)</drawSize>
      <texPath>Things/Building/Furniture/GrandThrone</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <shadowData>
        <volume>(2.1,0.5,1.5)</volume>
      </shadowData>
      <damageData>
        <rect>(0.1,0.1,2.8,1.8)</rect>
      </damageData>
    </graphicData>
  </ThingDef>
  
</Defs>