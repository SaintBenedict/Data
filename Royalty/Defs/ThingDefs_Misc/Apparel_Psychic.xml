  <ThingDef ParentName="PsychicApparelBase">
    <defName>Apparel_PsyfocusHelmet</defName>
    <label>eltex helmet</label>
    <description>A lightweight helmet designed for psychic focusing. While it provides little physical protection, its special materials enhance the wearer's psychic sensitivity and dissipate neural heat.</description>
    <thingCategories>
      <li>Headgear</li>
    </thingCategories>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/EltexHelmet/EltexHelmet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>500</MarketValue>
      <MaxHitPoints>80</MaxHitPoints>
      <Mass>0.8</Mass>
      <ArmorRating_Sharp>0.09</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.09</ArmorRating_Blunt>
      <ArmorRating_Heat>0.27</ArmorRating_Heat>
      <Insulation_Cold>4</Insulation_Cold>
      <Insulation_Heat>1</Insulation_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <PsychicSensitivity>0.15</PsychicSensitivity>
      <PsychicEntropyRecoveryRate>0.066</PsychicEntropyRecoveryRate>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/EltexHelmet/EltexHelmet</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <only>(80,135,145)</only>
        </li>
        <li>
          <only>(104,73,101)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>

